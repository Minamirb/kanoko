<h1>Listing articles</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Member</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.content %></td>
    <td><%= article.member.user.name %></td>
    <td><%= link_to 'Show', diary_article_path(@diary, article) %></td>
    <td><%= link_to 'Edit', edit_diary_article_path(@diary, article) %></td>
    <td><%= link_to 'Destroy', diary_article_path(@diary, article), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

