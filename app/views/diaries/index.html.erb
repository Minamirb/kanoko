<%= link_to '新しい日記', new_diary_path %>

<% @diaries.each do |diary| %>
  <% member = diary.members.find_by_user_id(current_user.id) %>
  <div class="diary">
    <div class="notebook">
      <div class="note_title">
        <%= link_to diary.title, new_diary_article_path(diary) %>
      </div>
      始めた日：2012/5/12<%#= diary.articles.fist.create_at.strftime("%Y/%m/%d") %>
    </div>
    <div class="detail">
      【交換メンバー】
      <%#= link_to 'メンバー追加', edit_diary_path(diary) %>
      <br />
      <% diary.users.each do |user| %>
        <table>
          <tr>
            <th width="20px"><% if diary.baton == user.id %><%= image_tag("check_g.png", size: "30x30") %><% else %>&nbsp;&nbsp;&nbsp;<% end %></th>
            <th><%= user.name %></th>
          </tr>
        </table>
      <% end %>
      <%= link_to 'この日記をやめる', diary, confirm: 'Are you sure?', method: :delete %>
    </div>
  </div>
  <br />
<% end %>
